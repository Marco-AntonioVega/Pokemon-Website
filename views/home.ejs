<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link href="/css/style.css" rel="stylesheet">
    <title>Home</title>
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png" sizes="64x64">
  </head>
  
  <body style="background-image: url('<%= bg %>'); background-size: cover;">
    <% include("partials/functions.ejs") %> 
    <header><h1>Welcome to the Pok√©dex!</h1></header>
    <%- include("partials/menu.ejs") %>
      
    <div class="row card">
    
      <div class="column">
        <!-- pokemon name and nat dex num -->
        <h1>
          <%= pokemon.name + " #" + pad(pokemon.id) %>
        </h1>

        <!-- pokemon variant tabs -->
        <% if(variants.length > 1) { %>
          <div id="tabRow">
            <% for(let i = 0; i < variants.length; i++) { %>
              <button class="tab" value="<%= i %>">
                <%= variants[i].name %>
              </button>
            <% } %>
          </div>
        <% } %>

        <!-- pokemon sprite and cry -->
        <img id="sprite" class="displayImg" src="<%= variants[0].sprite %>">
        <audio
          controls
          style="margin: 0 auto;
          display: block;
          margin-bottom: 40px;
          margin-top: 40px;"
          src="<%= cry %>"
        >
          Your browser does not support the
          <code>audio</code> element.
        </audio>
      </div>

      <!-- specific pokemon details, first variant as default -->
      <div class="column pokemonDetails">
        <h4 class="item" id="type">Type: <%= variants[0].types %></h4>
        <h4 class="item" id="genus">Species: <%= variants[0].genera %></h4>
        <h4 class="item" id="height">Height: <%= variants[0].height %></h4>
        <h4 class="item" id="weight">Weight: <%= variants[0].weight %></h4>
        <h4 class="item" id="abilities">Abilities: <%= variants[0].abilities %></h4>
        <h4 class="flavor" id="flavorText"><%= variants[0].flavorText %></h4>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="module">
      import {changeToOriginal, changeToVariantMiddle} from "./js/script.js";
      
      const init = () => {
        $(".tab").click(function() {
          changeToVariant($(this).val());
        });
      }
      
      init();

      // changes info based on variant tab
      const changeToVariant = (id) => {
        if(id == 0) {
          changeToOriginal(<%-JSON.stringify(variants)%>[0]);
          return;
        }
        changeToVariantMiddle(<%-JSON.stringify(variants)%>[id]);
      }
    </script>
  </body>
</html>